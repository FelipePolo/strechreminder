        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_stretch</item>
        <item name="postSplashScreenTheme">@style/Theme.StretchReminder</item>
    </style>

    <style name="Theme.StretchReminder" parent="android:Theme.Material.Light.NoActionBar" />

    <style name="Theme.AdMobOverlayFix" parent="android:Theme.Translucent.NoTitleBar.Fullscreen">
